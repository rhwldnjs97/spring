<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- <bean id="dao" class="spring.model.bbs.BbsDAO" -->
<!-- 	p:mybatis-ref="sqlSession"/> -->

<bean id="dao" class="spring.model.memo.MemoDAO"
	p:mybatis-ref="sqlSession"/>
<bean id="reply" class="spring.model.bbs.ReplyDAO"
	p:mybatis-ref="sqlSession"/>
<bean id="gallery" class="spring.model.gallery.GalleryDAO"
	p:mybatis-ref="sqlSession"/>

<!-- MyBatis SQL 실행 클래스  --> 
<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
    <property name="dataSource" ref="dataSource" />
    <!-- 아래부분은 매핑할 xml파일이 있는 패키지경로를 설정한다. -->
    <property name="typeAliasesPackage" value="spring.model" />
    <property name="mapperLocations" value="classpath:mybatis/*.xml" />
  </bean>
 
  <bean id="sqlSession" class="org.mybatis.spring.SqlSessionTemplate">
    <constructor-arg name="sqlSessionFactory" ref="sqlSessionFactory" />
  </bean>
<!-- 데이터베이스 접속 설정(DBOpen 대체) --> 
<bean id="dataSource" 
destroy-method="close"
class="org.apache.commons.dbcp.BasicDataSource" 
p:driverClassName="oracle.jdbc.driver.OracleDriver" 
p:url="jdbc:oracle:thin:@localhost:1521:XE" 
p:username="soldesk"  
p:password="1234"  
/>  
 

</beans>
